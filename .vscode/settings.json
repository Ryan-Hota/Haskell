{
    // haskell
    "haskell.manageHLS": "GHCup",
    // use this if you use GHCup, for automatic ghcup upgrades and quality-of-life

    // code runner
    "code-runner.saveAllFilesBeforeRun":true,
    "code-runner.saveFileBeforeRun":true,
    "code-runner.runInTerminal": true,
    "code-runner.defaultLanguage": "haskell",
    "code-runner.executorMap": {"haskell":"ghci $fullFileName \n:haskellSupportClearScreen \n:haskellSupportLoad $fullFileName"},
    "code-runner.enableAppInsights": false,

    // vscode
    "editor.acceptSuggestionOnEnter": "off"
}